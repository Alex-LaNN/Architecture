<div>
  <label class="hint" for="name">Название книги:</label>
  <input name="name" placeholder="Название книги:" type="text" id="name" required autofocus>
</div>
<div style="width: 20%;">
  <label class="hint" for="year">Год издания:</label>
  <input oninput="checkDigits(this, 'year')" name="year" placeholder="Год:" type="text" id="year" required>
</div>
<div style="width: 20%;">
  <label class="hint" for="pages">Всего страниц:</label>
  <input oninput="checkDigits(this, 'pages')" name="pages" placeholder="Страниц:" type="text" id="pages" required>
</div>
<div>
  <label class="hint" for="imageFile">Обложка:</label>
  <input name="image" placeholder="Обложка:" onchange="readURL(this)" type='file' id="imageFile" required>
  <img id="prevImage" src="#" alt="Image" />
</div>
<div>
  <div id="authors_container">
    <span class="hint">Укажите автора / авторов:</span>
    <input name="author1" id="author1" placeholder="Автор 1:" type="text" class="authors" required>
    <input name="author2" id="author2" placeholder="Автор 2:" type="text" class="authors">
    <input name="author3" id="author3" placeholder="Автор 3:" type="text" class="authors">
    <input name="author4" id="author4" placeholder="Автор 4:" type="text" class="authors">
    <input name="author5" id="author5" placeholder="Автор 5:" type="text" class="authors">
  </div>
  <span class="hint">Описание книги:</span>
  <textarea name="description" placeholder="Описание:" id="description" required></textarea>
</div>
<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        document.getElementById('prevImage').src = e.target.result;
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  function checkDigits(input, field) {
    const value = input.value;
    const isValid = /^\d+$/.test(value);
    
    if (!isValid) {
      alert(`Please enter only digits for the ${field}`);
      input.value = "";
    }
  }
</script>